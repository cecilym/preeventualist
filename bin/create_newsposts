#!/usr/bin/env ruby
# This tool just migrates the newsposts into a database
$: << File.join(__FILE__, "../..")
$: << File.join(__FILE__, "../lib")

require 'app'
require "preeventualist/newsposts"

perry = Poster.new
perry.name = "perry"
perry.save

Newsposts.each do |contents|
  post = perry.posts.new contents
  post.save
end